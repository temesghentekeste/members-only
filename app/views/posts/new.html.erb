<%= render "shared/errors", obj: @post%>

<div class="container">
  <div class="row">
    <div class="col-md-7 mx-auto">
    <h1>Create a new post</h1>
        
    <%= form_for @post do |f| %>
        <div class="form-group">
          <div class="form-group">
              <div class="">
                  <%= f.text_area :content,rows: 3,  class: "form-control", placeholder: "Body of post" %>
              </div>
        </div>
        <div class="form-group">
            <%= f.submit class:"btn btn-primary font-weight-bold" %>
        </div>
      <% end %>
      <div class="col-xs-4 text-center mb-5">
          [ <%= link_to "Cancel request and return to posts listing", posts_path, class: "text-info"%> ]
      </div>
    </div>
  </div>
</div>

